<h1>Listing characters</h1>

<table>
  <tr>
    <th>Guild</th>
    <th>Name</th>
    <th>Level</th>
    <th>Online</th>
    <th>Class</th>
    <th>Race</th>
    <th>Faction</th>
    <th>Gender</th>
  </tr>

<% @characters.each do |character| %>
  <tr>
    <td><%= link_to character.name, character %></td>
	<td><%=h character.guild.nil? ? "Not Linked" : link_to(character.guild.name, guild_path) %></td>
    <td><%=h character.level %></td>
    <td><%=h character.online %></td>
    <td><%=h character.class_id %></td>
    <td><%=h character.race_id %></td>
    <td><%=h character.faction_id %></td>
    <td><%=h character.gender_id %></td>
    <td><%= link_to 'Edit', edit_character_path(character) %></td>
    <td><%= link_to 'Destroy', character, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New character', new_character_path %>