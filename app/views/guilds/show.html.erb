<% 
tabs = Array.new
tabs << link_to("Guild", guild_path(@guild))
if permitted_to? :edit, @guild
	tabs << link_to("Edit", edit_guild_path(@guild))
	tabs << ""
	tabs << link_to("Actualize", :action => "actualize", :id => @guild.id)
end
render :partial => 'shared/tabs', :locals => {:tabs => tabs}
%>

<div id="infos">
	<p>
	  <b>Name:</b>
	  <%=h @guild.name %>
	</p>
	<p>
	  <b>Officer rank:</b>
	  <%=h @guild.officer_rank %>
	</p>
	<p>
	  <b>Raidleader rank:</b>
	  <%=h @guild.raidleader_rank %>
	</p>
	<p>
	  <b>Website:</b>
	  <%=h @guild.website %>
	</p>
</div>
<div id="description">
	<p>
	  <b>Description:</b>
	  <%=h @guild.description %>
	</p>
</div>
<div id="details">
	<p>
	  <b>Ail:</b>
	  <%=h @guild.ail %>
	</p>

	<p>
	  <b>Activity:</b>
	  <%=h @guild.activity %>
	</p>

	<p>
	  <b>Growth:</b>
	  <%=h @guild.growth %>
	</p>

	<p>
	  <b>Altratio:</b>
	  <%=h @guild.altratio %>
	</p>

	<p>
	  <b>Classratio:</b>
	  <%=h @guild.classratio %>
	</p>

	<p>
	  <b>Achivementpoints:</b>
	  <%=h @guild.achivementpoints %>
	</p>
	<p>
	  <b>Token:</b>
	  <%=h @guild.token %>
	</p>
	
</div>
<% permitted_to? :edit, @guild do %>
<%= link_to 'Edit', edit_guild_path(@guild) %> |
<% end %>
<%= link_to 'Back', guilds_path %>